<idea-plugin>
    <id>com.tencent.FlutterPluginGenerator</id>
    <name>Flutter Plugin Generator</name>
    <vendor email="fosterhe@tencent.com" url="http://www.tencent.com">Tencent</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="defaultFlutterPluginGenerator" class="com.tencent.flutter.plugin.generator.action.FlutterPluginApiAction" text="Flutter Plugin Generator"
                description="auto generate a flutter plugin">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>